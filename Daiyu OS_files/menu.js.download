function readPost() {
  firebase
    .firestore()
    .collection("Menu/")
    .onSnapshot(function(snapshot) {
      document.getElementById("Menu").innerHTML = " ";
      snapshot.forEach(function(post) {
        document.getElementById("Menu").innerHTML += `
          ${post.data().code}
             `;
      });
    });
}
setInterval(readPost, 2000);
